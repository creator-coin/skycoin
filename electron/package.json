{
    "name": "creatorcoin",
    "productName": "CreatorCoin",
    "author": "CreatorCoin",
    "main": "src/electron-main.js",
    "version": "0.25.0-rc1",
    "description": "CreatorCoin wallet",
    "license": "MIT",
    "build": {
        "appId": "org.creator-coin.creator-coin",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.productivity",
            "extraFiles": [
                {
                    "from": ".gox_output/gui/${os}_${arch}",
                    "to": "./Resources/app"
                }
            ]
        },
        "win": {
            "target": "nsis",
            "extraFiles": [
                {
                    "from": ".gox_output/gui/${os}_${arch}",
                    "to": "./resources/app"
                }
            ]
        },
        "linux": {
            "category": "Network",
            "extraFiles": [
                {
                    "from": ".gox_output/gui/${os}_${arch}",
                    "to": "./resources/app"
                },
                {
                    "from": "build/icons/icon512x512.png",
                    "to": "./Resources"
                }
            ]
        },
        "files": [
            "!**/*",
            "src/**/*"
        ],
        "extraResources": [
            {
                "from": "../src/gui/static/dist/",
                "to": "./app/dist/",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "./skycoin/",
                "to": "./app/dist/"
            }
        ],
        "directories": {
            "output": "release"
        }
    },
    "scripts": {
        "start": "electron ./src/electron-main.js dev",
        "dist-win32": "build -w --ia32 -p=never",
        "dist-win64": "build -w --x64 -p=never",
        "dist-win": "build -w --x64 --ia32 -p=never",
        "dist-linux": "build -l --x64 -p=never",
        "dist-mac": "build -m --x64 -p=never",
        "pack-mac": "build --dir -m -p=never",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "electron": "^2.0.9",
        "electron-builder": "20.13.3"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "electron-context-menu": "^0.10.1",
        "electron-debug": "^2.0.0"
    }
}
